<Menu>:
    MDScreen:
        name: 'Menu'

        FitImage:
            source:"Images/Backgrounds/Menu.png"
         

        MDBoxLayout:
            orientation: "vertical"
            spacing: 5
            padding: 10

            Image:
                source: "Images/Icons/Hypercorn.png"  
                size_hint_y: None   
                height: "200"

            MDLabel:
                text: "¡Listo para trabajar!"   
                halign: "center"
                pos_hint: {"center_x": .5, "center_y": .5} #alineacion texto"
                bold: True
                font_style: "H4"
                font_size: 35
                theme_text_color: "Custom"
                text_color: "black"
    

            MDRoundFlatIconButton:
                line_color: 0, 0, 0, 0
                pos_hint: {"center_x": 0.5}
                md_bg_color: "green"  # Verde
                text: "EMPEZAR"
                text_color: "white"   # Blanco
                font_size: 40
                bold: True
                on_press: app.change_screen('Reading')

                
            MDLabel:
                #adaptive_height: True 
                pos_hint: {"center_x": .5, "center_y": .5}
                text: "¡Monitoreamos tu cultivo con imágenes de satélite o dron!"
                halign: "center"
                theme_text_color: "Custom"
                text_color: (0, 0, 0, 1)  # Color negro
                bold: True
                font_style: "H4"
                font_size: 35
