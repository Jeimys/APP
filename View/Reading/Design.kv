<Reading>:
    MDScreen:
        name: 'Reading'

        FitImage:
            source:"Images/Backgrounds/Wellcome.png"

        MDBoxLayout:
            orientation: "vertical"
            padding: ('20dp', '10dp', '20dp', '20dp')
            spacing: 20

            MDRoundFlatIconButton:
                text: "Volver"
                icon: "arrow-left"
                pos_hint: {"center_y": 0.9, "right": 0.3} 
                size_hint_x: None
                width: self.parent.width * 0.4  
                text_color: "black"
                line_color: 0,0,0,0
                bold: True
                theme_icon_color: "Custom"
                icon_color: "black"
                on_press: root.go_back() 

            Image:
                source: "Images/Icons/Hypercorn.png"  
                size_hint_y: None
                height: "200"
            
            MDRoundFlatButton:
                line_color: 0, 0, 0, 0
                size_hint: None, None
                pos_hint: {"center_x": 0.5}
                md_bg_color: "green"  # Verde
                text: "Carga tu imagen"
                text_color: "white"   # Blanco
                theme_text_color: "Custom"
                font_size: 30
                bold: True
                on_press: app.open_file_chooser()  # Llama a la función para abrir el selector de archivos

            MDBoxLayout:
                id: image_box  # Añadir un ID para referenciar este BoxLayout en el código Python
                orientation: "vertical"
                size_hint: None, None  # Deshabilita el ajuste automático del tamaño
                size: "290dp", "320dp"  # Establece el tamaño del MDBoxLayout
                pos_hint: {"center_x": 0.5}
                md_bg_color: 1, 1, 1, 1  # Color blanco
                radius: [15, 15, 15, 15] 
                padding: ('10dp', '10dp', '10dp', '10dp')

                MDLabel:
                    id: svm
                    pos_hint: {"center_x": .5, "center_y": .5}
                    text: "Aquí se mostrará tu imagen"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: (0, 0, 0, 1)  # Color negro
                    font_style: "Subtitle2"

            MDLabel:
                text: "El estado de tu cultivo es: "   
                halign: "center"
                bold: True
                font_style: "H6"
                theme_text_color: "Custom"
                text_color: "green"

            MDLabel:
                id: estado
                text: " " 
                halign: "center"
                font_style: "H6"
                theme_text_color: "Custom"
                text_color: "green" 

            MDRoundFlatButton:
                pos_hint: {"center_x": 0.5}
                md_bg_color: "green"  # Verde
                text: "Más información"
                text_color: "white"   # Blanco
                font_size: 35
                bold: True
                #on_press: app.change_screen('Classification')
                on_press: app.segment_image()

